# Application Configuration
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:3000

# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT={"type": "service_account", "project_id": "...", ...}
FIREBASE_DATABASE_URL=https://your-database.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-bucket.appspot.com

# Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Third-Party APIs
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

OPENAI_API_KEY=your_openai_api_key
OPENAI_ORG_ID=your_openai_org_id

TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Rate Limiting
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/combined.log
ERROR_LOG_FILE=logs/error.log

# AI/ML Models
EXPENSE_CATEGORIZER_MODEL=ai-ml/expense_category_model.pkl
FRAUD_DETECTOR_MODEL=ai-ml/fraud_model.pkl
FINANCIAL_HEALTH_MODEL=ai-ml/financial_health_model.pkl